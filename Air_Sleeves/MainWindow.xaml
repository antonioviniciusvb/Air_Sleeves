<Controls:MetroWindow x:Class="Air_Sleeves.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:views="clr-namespace:Air_Sleeves.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Air_Sleeves"
        mc:Ignorable="d"
        Title="Air Sleeves - v.1.4"
        WindowState="Maximized" Height="10000" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Controls:MetroAnimatedTabControl  Controls:TabControlHelper.Underlined="TabItems">
            <TabItem Header="Calculo">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <DockPanel Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Controls:ToggleSwitch IsChecked="{Binding Peca.Type, Mode=TwoWay}" OffLabel="ORÇAMENTO" OnLabel="FABRICAÇÃO" TabIndex="1"></Controls:ToggleSwitch>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Camisas_1.Interna}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="INTERNA (mm)" ToolTip="MEDIDA INTERNA" TabIndex="2"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Camisas_1.Externa}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="EXTERNA (mm)" Margin="10,0,0,0" ToolTip="MEDIDA EXTERNA" TabIndex="3"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Camisas_1.Comprimento}"  Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="COMPRIMENTO (mm)" ToolTip="COMPRIMENTO" Margin="10,0,0,0" TabIndex="4"></Controls:NumericUpDown>
                            <Button Margin="10,0,0,0" Command="{Binding ExecutaSimulacao}" ToolTip="Calcular" Content="Iniciar" VerticalAlignment="Stretch" HorizontalAlignment="Center" TabIndex="5"></Button>
                            <Button Margin="10,0,0,0" Command="{Binding Reset}" ToolTip="Resetar" Content="Reset" VerticalAlignment="Stretch" HorizontalAlignment="Center" TabIndex="8"></Button>
                        </DockPanel>
                        <DockPanel Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Controls:ToggleSwitch IsChecked="{Binding CalculaEva, Mode=TwoWay}" OffLabel="E.V.A" OnLabel="E.V.A"></Controls:ToggleSwitch>
                            <Controls:ToggleSwitch IsChecked="{Binding CalculaSegundaCamisa, Mode=TwoWay}" OffLabel="2º Camisa" OnLabel="2º Camisa"></Controls:ToggleSwitch>
                            <Controls:ToggleSwitch IsChecked="{Binding CalculaIsopor, Mode=TwoWay}" OffLabel="Isopor" OnLabel="Isopor"></Controls:ToggleSwitch>
                            <Controls:ToggleSwitch IsChecked="{Binding CalculaFilamento, Mode=TwoWay}" OffLabel="Filamento" OnLabel="Filamento"></Controls:ToggleSwitch>
                            <Controls:ToggleSwitch IsChecked="{Binding CalculaAcabamento, Mode=TwoWay}" OffLabel="Acabamento" OnLabel="Acabamento"></Controls:ToggleSwitch>
                        </DockPanel>
                        <DockPanel Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Camisas_1.Voltas}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Voltas 1º Camisa" ToolTip="Voltas 1º Camisa" Margin="10,0,0,0" TabIndex="9"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Camisas_2.Voltas}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Voltas 2º Camisa" ToolTip="Voltas 2º Camisa" Margin="10,0,0,0" TabIndex="10"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Selagem.Voltas}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Voltas Selagem" ToolTip="Voltas Selagem" Margin="10,0,0,0" TabIndex="11"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Preco_Anel, Mode=TwoWay}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="ANEL" ToolTip="Valor Anel" Margin="10,0,0,0" StringFormat="{}{0:N}" TabIndex="13"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Preco_Isopor, Mode=TwoWay}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="ISOPOR" ToolTip="Valor Isopor" Margin="10,0,0,0" StringFormat="{}{0:N}" TabIndex="14"></Controls:NumericUpDown>
                            <Controls:NumericUpDown Value="{Binding AuxPeca.Preco_Embalagem, Mode=TwoWay}" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="EMBALAGEM" ToolTip="Valor Embalagem" Margin="10,0,0,0" StringFormat="{}{0:N}" TabIndex="15"></Controls:NumericUpDown>
                        </DockPanel>
                    </StackPanel>

                    <Grid Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ScrollViewer  Controls:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True">
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="20"></RowDefinition>
                                    <RowDefinition Height="110"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="20"></RowDefinition>
                                    <RowDefinition Height="90"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="20"></RowDefinition>
                                    <RowDefinition Height="90"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="20"></RowDefinition>
                                    <RowDefinition Height="130"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="120"></RowDefinition>
                                    <RowDefinition Height="15"></RowDefinition>
                                    <RowDefinition Height="130"></RowDefinition>
                                </Grid.RowDefinitions>

                                <TextBlock TextAlignment="Center" Grid.Row="0" Grid.Column="0" Background="AntiqueWhite" FontWeight="Bold">1º CAMISA</TextBlock>

                                <DockPanel  Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock>Interna:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Camisas_1.Interna, Mode=TwoWay, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Externa:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Camisas_1.Externa, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Comprimento:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Camisas_1.Comprimento, StringFormat={}{0:N}}"></TextBlock>
                                </DockPanel>

                                <Grid x:Name="grdCamisa_1"  Margin="0,5,0,0" Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>


                                    <StackPanel Grid.Column="0">
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">CADARÇO</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="70" TextAlignment="Right">Metros:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Blue" Text="{Binding Peca.Camisas_1.Metros_Cadarco, StringFormat={}{0} m}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="70" TextAlignment="Right">Peso:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_1.Peso_Cadarco, StringFormat={}{0} kg}"/>
                                        </DockPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" >
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">COMPOSTO</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="100" TextAlignment="Right">100% - RK 102:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_1.Peso_Resina, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="100" TextAlignment="Right">80% - HL918:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_1.Peso_HL918, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="100" TextAlignment="Right">5% - A78:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_1.Peso_A78, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                        <DockPanel Margin="0,5,0,0">
                                            <TextBlock FontWeight="Bold">Total</TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_1.Composto_Resina, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">VALOR PEÇAS</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">CADARÇO:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_1.Preco_Cadarco, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">RK 102:</TextBlock>
                                            <TextBlock Margin="40,0,0,0"  Foreground="Green" Text="{Binding Peca.Camisas_1.Preco_Resina, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">HL918:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_1.Preco_HL918, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">A78:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_1.Preco_A78, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold">Total</TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_1.Preco_Total, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>


                                    </StackPanel>

                                </Grid>

                                <TextBlock Visibility="{Binding ExibirEva}" TextAlignment="Center" Grid.Row="3" Grid.Column="0" Background="AntiqueWhite" FontWeight="Bold">E.V.A</TextBlock>
                                <DockPanel Visibility="{Binding ExibirEva}" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
