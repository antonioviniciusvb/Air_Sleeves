                                        <DockPanel>
                                            <TextBlock Width="120" TextAlignment="Right">COLA 100% - RK 102:</TextBlock>
                                            <TextBlock Margin="20,0,0,0" Foreground="Red" Text="{Binding Peca.Colagem.Peso_Resina, StringFormat={}{0} kg}"/>
