                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Eva.Comprimento, StringFormat={}{0:N}}"></TextBlock>
                                </DockPanel>
                                <Grid x:Name="grdEVA" Visibility="{Binding ExibirEva}" Margin="0,5,0,0" Grid.Row="5">
