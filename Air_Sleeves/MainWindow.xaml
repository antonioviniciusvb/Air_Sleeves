                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Eva.Interna, Mode=TwoWay, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Externa:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Eva.Externa, StringFormat={}{0:N}}"></TextBlock>
