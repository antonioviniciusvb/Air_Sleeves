                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="100" TextAlignment="Right">CADARÇO:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Selagem.Preco_Cadarco, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="100" TextAlignment="Right">RK 101F:</TextBlock>
                                            <TextBlock Margin="40,0,0,0"  Foreground="Green" Text="{Binding Peca.Selagem.Preco_Resina101F, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="100" TextAlignment="Right">HT231:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Selagem.Preco_HT231, StringFormat=R$ {0:N}}"/>
