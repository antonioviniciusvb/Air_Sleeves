                                        </DockPanel>

                                        <DockPanel Margin="0,5,0,0">
                                            <TextBlock FontWeight="Bold">Total</TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_2.Composto_Resina, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                    </StackPanel>


                                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">VALOR PEÇAS</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">CADARÇO:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_2.Preco_Cadarco, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">RK 101F:</TextBlock>
                                            <TextBlock Margin="40,0,0,0"  Foreground="Green" Text="{Binding Peca.Camisas_2.Preco_Resina101F, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">HT356:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_2.Preco_HT356, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold">Total</TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="Green" Text="{Binding Peca.Camisas_2.Preco_Total, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>


                                    </StackPanel>

                                </Grid>

                                <TextBlock Visibility="{Binding ExibirIsopor}" TextAlignment="Center" Grid.Row="9" Grid.Column="0" Background="AntiqueWhite" FontWeight="Bold">ISOPOR</TextBlock>
                                <DockPanel Visibility="{Binding ExibirIsopor}" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock>Interna:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Selagem.Interna, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Externa:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Selagem.Externa, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Comprimento:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Selagem.Comprimento, StringFormat={}{0:N}}"></TextBlock>
                                </DockPanel>
                                <Grid Visibility="{Binding ExibirIsopor}" x:Name="grdCamisa_3" Margin="0,5,0,0" Grid.Row="11">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">CADARÇO</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="70" TextAlignment="Right">Metros:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Blue" Text="{Binding Peca.Selagem.Metros_Cadarco, StringFormat={}{0} m}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="70" TextAlignment="Right">Peso:</TextBlock>
