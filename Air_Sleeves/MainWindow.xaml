                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">Resina 102:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Blue" Text="{Binding Peca.Eva.Composto_Resina, StringFormat={}{0} kg}"/>
                                        </DockPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" >
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">COMPOSTO</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="90" TextAlignment="Right">100% - RK 102:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Eva.Peso_Resina, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="90" TextAlignment="Right">20% - HT231:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Eva.Peso_HT231, StringFormat={}{0} kg}"/>
                                        </DockPanel>


                                        <DockPanel Margin="0,5,0,0">
                                            <TextBlock FontWeight="Bold">Total</TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="Red" Text="{Binding Peca.Eva.Composto_Resina, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">VALOR PEÇAS</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">RK 102:</TextBlock>
                                            <TextBlock Margin="40,0,0,0"  Foreground="Green" Text="{Binding Peca.Eva.Preco_Resina, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">HT231:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Eva.Preco_HT231, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="80" TextAlignment="Right">EVA:</TextBlock>
                                            <TextBlock Margin="40,0,0,0" Foreground="Green" Text="{Binding Peca.Eva.Preco_EVA, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock FontWeight="Bold">Total</TextBlock>
                                            <TextBlock Margin="10,0,0,0" Foreground="Green" Text="{Binding Peca.Eva.Preco_Total, StringFormat=R$ {0:N}}"/>
                                        </DockPanel>


                                    </StackPanel>

                                </Grid>

                                <TextBlock Visibility="{Binding ExibirSegundaCamisa}" Grid.Row="6" TextAlignment="Center" Background="AntiqueWhite" FontWeight="Bold">2º CAMISA</TextBlock>
                                <DockPanel Visibility="{Binding ExibirSegundaCamisa}" Grid.Row="7" VerticalAlignment="Center" Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock>Interna:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Camisas_2.Interna, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Externa:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Camisas_2.Externa, StringFormat={}{0:N}}"></TextBlock>
                                    <TextBlock Margin="10,0,0,0">Comprimento:</TextBlock>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Peca.Camisas_2.Comprimento, StringFormat={}{0:N}}"></TextBlock>
                                </DockPanel>
                                <Grid Visibility="{Binding ExibirSegundaCamisa}" x:Name="grdCamisa_2" Margin="0,5,0,0"  Grid.Row="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">CADARÇO</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="70" TextAlignment="Right">Metros:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Blue" Text="{Binding Peca.Camisas_2.Metros_Cadarco, StringFormat={}{0} m}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="70" TextAlignment="Right">Peso:</TextBlock>
                                            <TextBlock Margin="30,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_2.Peso_Cadarco, StringFormat={}{0} kg}"/>
                                        </DockPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" >
                                        <TextBlock Background="Azure" TextAlignment="Center" FontWeight="Bold" FontSize="12" HorizontalAlignment="Stretch">COMPOSTO</TextBlock>

                                        <DockPanel>
                                            <TextBlock Width="120" TextAlignment="Right">100% - RK 101F:</TextBlock>
                                            <TextBlock Margin="20,0,0,0" Foreground="Red" Text="{Binding Peca.Camisas_2.Peso_Resina101F, StringFormat={}{0} kg}"/>
                                        </DockPanel>

                                        <DockPanel>
                                            <TextBlock Width="120" TextAlignment="Right">20% - HT356:</TextBlock>
