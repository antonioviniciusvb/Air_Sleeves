            </Controls:Tile>
            <Controls:Tile Grid.Column="1" Title="About" ToolTip="InformaçÕes sobre o aplicativo" Height="100" Width="200" TextOptions.TextFormattingMode="Ideal" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#FF3E3E42">
