            <Controls:Tile Click="btnGntAddUser" Title="Novo Usúario" ToolTip="Adicionar Usúarios" TextOptions.TextFormattingMode="Ideal" Width="120" Height="130"  Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#CC0027AB">
                <iconPacks:PackIconModern Kind="UserAdd" Width="50" Height="50"></iconPacks:PackIconModern>
            </Controls:Tile>



            <WrapPanel Orientation="Vertical" VerticalAlignment="Center">
                <Controls:Tile Title="Listar" ToolTip="Listar Usúarios" Background="#D2691E" Width="75" Height="50" TextOptions.TextFormattingMode="Display" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center">
                    <iconPacks:PackIconModern  Kind="List" Width="20" Height="13"  Margin="0,0,50,0"></iconPacks:PackIconModern>
                </Controls:Tile>
                <Controls:Tile Title="Editar" ToolTip="Editar Usúarios" Width="75" Height="50" TextOptions.TextFormattingMode="Display" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#FF3F731C">
                    <iconPacks:PackIconModern Kind="Edit" Width="20" Height="13" Margin="0,0,50,0" ></iconPacks:PackIconModern>
                </Controls:Tile>
            </WrapPanel>

            <Controls:Tile Title="Add Empresa" Click="btnGntAddEmpresa" ToolTip="Adicionar Empresas" TextOptions.TextFormattingMode="Ideal" Width="120" Height="130"  Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#CC17DABB">
