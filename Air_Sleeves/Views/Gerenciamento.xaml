                    <iconPacks:PackIconModern Kind="Edit" Width="20" Height="13" Margin="0,0,50,0" ></iconPacks:PackIconModern>
                </Controls:Tile>
            </WrapPanel>

            <WrapPanel x:Name="wrapGerenciamento2" Grid.Column="0" VerticalAlignment="Center">

                <Controls:Tile Title="Add Correios" Click="btnGntAddCorreios" ToolTip="Adicionar Unidade dos Correios" TextOptions.TextFormattingMode="Ideal" Width="120" Height="130"  Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#CCFCF50A">
