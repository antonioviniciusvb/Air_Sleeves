                    <Controls:Tile Title="Editar" ToolTip="Editar Intervalos CEP" Width="75" Height="50" TextOptions.TextFormattingMode="Display" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#FF3F731C">
                        <iconPacks:PackIconModern Kind="Edit" Width="20" Height="13"  Margin="0,0,50,0"></iconPacks:PackIconModern>
