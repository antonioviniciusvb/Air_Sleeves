                    <Controls:Tile Title="Editar" ToolTip="Editar Unidades Correios" Width="75" Height="50" TextOptions.TextFormattingMode="Display" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#FF3F731C">
