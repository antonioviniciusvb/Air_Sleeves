                    <iconPacks:PackIconModern Kind="Edit" Width="20" Height="13" Margin="0,0,50,0" ></iconPacks:PackIconModern>
                </Controls:Tile>
            </WrapPanel>

            <Controls:Tile Title="Add Produto" Click="btnGntAddProduto" ToolTip="Adicionar Produtos" TextOptions.TextFormattingMode="Ideal" Width="120" Height="130"  Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" HorizontalTitleAlignment="Center" Background="#FF354B8B">
